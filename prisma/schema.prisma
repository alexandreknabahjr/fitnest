generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum WorkoutType{

  CARDIO
  STRENGTH
  CROSSFIT
  FLEXIBILITY

}

model User{

  id                 String              @id @default(uuid())
  email              String              @unique
  password           String

  profile            Profile?
  workout            Workout[]
  meals              Meal[]

}

model Profile{

  id                 String              @id @default(uuid())
  firstName          String              @map("first_name")
  lastName           String              @map("last_name")
  age                Int
  weight             Int
  height             Int

  // Relationships:

  userId             String             @unique
  user               User               @relation(fields: [userId], references: [id])

}

model Workout{

  id                 String              @id @default(uuid())
  name               String
  duration           Int
  date               DateTime
  workoutType        WorkoutType


  // Relationships:

  userId             String              @unique
  user               User                @relation(fields: [userId], references: [id])

}


model Meal{

  id                 String              @id @default(uuid())
  foods              String[]
  calories           Float?
  carbs              Float?
  protein            Float?
  fats               Float?
  date               DateTime


  // Relationships:

  userId             String              @unique
  user               User                @relation(fields: [userId], references: [id])

}